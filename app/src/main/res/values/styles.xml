<resources>

    <attr format="reference" name="cardStyle"/>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorActionBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/windowBackground</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/colorActionBar_Dark</item>
    </style>

    <!-- Default Theme -->

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/windowBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="cardStyle">@style/CardView.Light</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorForeground">@color/textColorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/windowBackground</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <!-- Dark Theme -->

    <style name="MyActionBar_Dark" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorActionBar_Dark</item>
        <item name="android:textColor">@color/textColorSecondary_Dark</item>
    </style>

    <style name="Widget.App.BottomNavigationView_Dark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView_Dark</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView_Dark" parent="">
        <item name="colorPrimary">@color/BottomNavBarColor_Dark</item>
        <item name="colorOnPrimary">@color/colorPrimary_Dark</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="actionBarStyle">@style/MyActionBar_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="android:windowBackground">@color/windowBackground_Dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_Dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_Dark</item>
        <item name="android:textColor">@color/textColor_Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView_Dark</item>
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorOnSurface">@color/colorOnSurface_Dark</item>
        <item name="android:colorForeground">@color/textColorSecondary_Dark</item>
    </style>

</resources>

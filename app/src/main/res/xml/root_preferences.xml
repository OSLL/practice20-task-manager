<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <Preference
            app:icon="@drawable/archive_icon"
            app:title="Archive" />

    </PreferenceCategory>

    <PreferenceCategory>

        <Preference
            app:icon="@drawable/settings_icon"
            app:title="Settings" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/appearance_icon"
        app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Dark mode" />

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Invert swipe" />

    </PreferenceCategory>

    <PreferenceCategory>

        <Preference
            android:backgroundTint="@android:color/holo_green_light"
            app:icon="@drawable/help_icon"
            app:title="Help" />

    </PreferenceCategory>

</PreferenceScreen>